.container
    .well 
        form.form-horizontal(name="profileForm")
            fieldset
                legend User Profile
                .form-group
                    label.col-md-2.control-label(for="email") Email
                    .col-md-10
                        input.form-control(name="email", type="email", placeholder="your email", ng-model="email",  )
                .form-group
                    label.col-md-2.control-label(for="fname") First Name
                    .col-md-10
                        input.form-control(name="fname", type="fname", placeholder="your first name", ng-model="fname", )
                .form-group
                    label.col-md-2.control-label(for="lname") Last Name
                    .col-md-10
                        input.form-control(name="lname", type="lname", placeholder="your last name", ng-model="lname",  )
                .form-group
                    label.col-md-2.control-label(for="password") Password
                    .col-md-10
                        input.form-control(name="password", type="password", placeholder="your password", ng-model="password" )
                .form-group
                    .col-md-10.col-md-offset-2
                        .pull-right 
                            button.btn.btn-primary(ng-click="update()", ng-disabled="profileForm.$invalid") Update Info
                            a.btn.btn-default(href="/") Cancel